<%= form_for(@company) do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true %>
  </p>
  <p>
    <%= f.label :industry %>
    <%= f.text_field :industry %>
  </p>
  <p>
    <%= f.label :about_us %>
    <%= f.text_area :about_us, cols: 25, rows: 2 %>
  </p>
  <p>
    <%= f.label :headquarters_location %>
    <%= f.text_field :headquarters_location %>
  </p>
  <p>
    <%= f.label :url, "Copy and paste your company URL here: " %>
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :open_source_projects_url, "Copy and paste your open source projects URL here: " %>
    <%= f.text_field :open_source_projects_url %>
  </p>
  <p>
    <%= f.label :stack %>
    <%= f.text_field :stack %>
  </p>
  <p>
    <%= f.label :company_size %>
    <%= f.number_field :size %>
  </p>

  <%= f.submit %>
<% end %>
